{
  "name": "@oriana/api",
  "version": "1.0.0",
  "description": "Oriana Order Tracking API",
  "main": "dist/handlers/po.handler.js",
  "scripts": {
    "build": "node esbuild.config.js",
    "build:tsc": "tsc",
    "build:manifest": "ts-node -r tsconfig-paths/register scripts/generate-manifest.ts",
    "watch": "node esbuild.config.js --watch",
    "watch:tsc": "tsc -w",
    "build:layer": "node scripts/build-layer.js",
    "build:layer:force": "node scripts/build-layer.js --force",
    "build:layer:check": "node scripts/build-layer.js --check",
    "build:all": "npm run build:layer && npm run build && npm run build:manifest",
    "build:fast": "npm run build:layer && npm run build",
    "clean": "rimraf dist app-manifest.json",
    "rebuild": "npm run clean && npm run build:all",
    "db:generate": "cd layers/shared/nodejs && npx prisma generate",
    "db:migrate": "cd layers/shared/nodejs && npx prisma migrate dev",
    "db:migrate:prod": "node scripts/db-migrate-prod.js",
    "db:push": "cd layers/shared/nodejs && npx prisma db push",
    "db:studio": "cd layers/shared/nodejs && npx prisma studio",
    "db:format": "cd layers/shared/nodejs && npx prisma format",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "dev:express": "ts-node -r tsconfig-paths/register src/dev-server.ts",
    "dev:express:watch": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/dev-server.ts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "inversify": "^6.0.2",
    "jsonwebtoken": "^9.0.3",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.958.0",
    "@aws-sdk/client-rds": "^3.958.0",
    "@aws-sdk/client-s3": "^3.958.0",
    "@aws-sdk/client-secrets-manager": "^3.958.0",
    "@aws-sdk/s3-request-presigner": "^3.958.0",
    "@prisma/client": "^5.7.0",
    "@types/aws-lambda": "^8.10.130",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  }
}
