{
  "name": "@oriana/api",
  "version": "1.0.0",
  "description": "Oriana Order Tracking API",
  "main": "dist/handlers/po.handler.js",
  "scripts": {
    "build": "node esbuild.config.js",
    "build:tsc": "tsc",
    "build:manifest": "ts-node -r tsconfig-paths/register scripts/generate-manifest.ts",
    "watch": "node esbuild.config.js --watch",
    "watch:tsc": "tsc -w",
    "build:layer": "node scripts/build-layer.js",
    "build:all": "npm run build:layer && npm run build && npm run build:manifest",
    "clean": "rimraf dist app-manifest.json",
    "rebuild": "npm run clean && npm run build:all",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "inversify": "^6.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "sequelize-cli": "^6.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  }
}
